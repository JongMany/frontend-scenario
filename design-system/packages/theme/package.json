{
  "name": "@jm/themes",
  "version": "0.0.1",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "type": "module",
  "scripts": {
    "build:cjs": "esbuild src/index.js --format=cjs --minify --bundle --outfile=dist/index.js",
    "build:esm": "esbuild src/index.js --format=esm --minify --bundle --outfile=dist/index.js",
    "build:js": "node esbuild.js",
    "build:ts": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:js && npm run build:ts"
  },
  "devDependencies": {
    "esbuild": "^0.16.17",
    "typescript": "^5.7.3"
  }
}
